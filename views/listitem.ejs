<li>
    <% if ( listitem.title != "" && listitem.title != "请输入标题") { %>
        <div class="title"><%= listitem.title %></div>
    <% } %>
    <% if ( listitem.img != "") { %>
        <img class="pic" src="<%= listitem.img %>">
    <% } %>
    <% if ( listitem.content != "" && listitem.content != "请输入内容") { %>
        <div class="content"><%= listitem.content %></div>
    <% } %>
</li>